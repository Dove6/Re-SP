OBJECT=BEHMOVESLIDER
BEHMOVESLIDER:TYPE=BEHAVIOUR
BEHMOVESLIDER:CODE={@INT("L_IMOUSEX",[MOUSE^GETPOSX()-ISLIDINGOFFX]);@IF("L_IMOUSEX<'ISLIDERMINX||L_IMOUSEX>'ISLIDERMAXX","BEHMOVESLIDER_SUB1","BEHMOVESLIDER_SUB2");}

OBJECT=BEHMOVESLIDER_SUB1
BEHMOVESLIDER_SUB1:TYPE=BEHAVIOUR
BEHMOVESLIDER_SUB1:CODE={@IF("L_IMOUSEX<'ISLIDERMINX","{ISLIDERPOS^SET(0);}","{ISLIDERPOS^SET(8);}");}

OBJECT=BEHMOVESLIDER_SUB2
BEHMOVESLIDER_SUB2:TYPE=BEHAVIOUR
BEHMOVESLIDER_SUB2:CODE={@DOUBLE("L_DSTEPX",[ISLIDERMAXX-ISLIDERMINX]);L_DSTEPX^DIV(8.0);@IF("L_DSTEPX<0.01","{@BREAK();}","");@DOUBLE("L_DADJMOUSEPOS",[L_IMOUSEX-ISLIDERMINX]);L_DADJMOUSEPOS^DIV(L_DSTEPX);ISLIDERPOS^SET(L_DADJMOUSEPOS^ROUND());}

OBJECT=BEHRELOADLABELS
BEHRELOADLABELS:TYPE=BEHAVIOUR
BEHRELOADLABELS:CODE={@IF("G_SOSTVERSION'"BROSZ"","{ANNLABELAC^PLAY("BROSZ");ANNLABELIN^PLAY("JACHOWICZ");}","{ANNLABELAC^PLAY("JACHOWICZ");ANNLABELIN^PLAY("BROSZ");}");}

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN();BEHRELOADLABELS^RUN();ISLIDERPOS^SET([G_IMUSICVOLUME @ 100]);}

