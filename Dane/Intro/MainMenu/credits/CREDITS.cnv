######################################
##############  ANIMO  ###############
######################################

OBJECT=REKSIO
REKSIO:TYPE=ANIMO
REKSIO:VISIBLE=TRUE
REKSIO:FILENAME=REKSIO.ANN
REKSIO:TOCANVAS=TRUE
REKSIO:PRIORITY=0
REKSIO:FPS=16
REKSIO:PRELOAD=TRUE
REKSIO:RELEASE=TRUE
REKSIO:MONITORCOLLISION=FALSE
REKSIO:MONITORCOLLISIONALPHA=FALSE
REKSIO:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=WODA
WODA:TYPE=ANIMO
WODA:VISIBLE=TRUE
WODA:FILENAME=WODA.ANN
WODA:TOCANVAS=TRUE
WODA:PRIORITY=0
WODA:FPS=16
WODA:PRELOAD=TRUE
WODA:RELEASE=TRUE
WODA:MONITORCOLLISION=FALSE
WODA:MONITORCOLLISIONALPHA=FALSE
WODA:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=START
START:TYPE=ANIMO
START:VISIBLE=TRUE
START:FILENAME=START.ANN
START:TOCANVAS=TRUE
START:PRIORITY=10
START:FPS=16
START:PRELOAD=TRUE
START:RELEASE=TRUE
START:MONITORCOLLISION=FALSE
START:MONITORCOLLISIONALPHA=FALSE
START:ONFINISHED={THIS^HIDE();NAPISY^PLAY("PLAY");}

OBJECT=NAPISY
NAPISY:TYPE=ANIMO
NAPISY:VISIBLE=TRUE
NAPISY:FILENAME=NAPISY.ANN
NAPISY:TOCANVAS=TRUE
NAPISY:PRIORITY=0
NAPISY:FPS=2
NAPISY:PRELOAD=TRUE
NAPISY:RELEASE=TRUE
NAPISY:MONITORCOLLISION=FALSE
NAPISY:MONITORCOLLISIONALPHA=FALSE
NAPISY:ONFINISHED={RATUNEK^GOTO("OFERTA");}


######################################
###############  MISC  ###############
######################################

OBJECT=MOUSE
MOUSE:TYPE=MOUSE
MOUSE:ONCLICK={RATUNEK^GOTO("OFERTA");}


######################################
############  BEHAVIOUR  #############
######################################

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN(); !ANIMATIONS_INIT; REKSIO^PLAY("PLAY");WODA^PLAY("PLAY");START^PLAY("PLAY");}

