######################################
##############  ANIMO  ###############
######################################

OBJECT=NAPIS1
NAPIS1:TYPE=ANIMO
NAPIS1:VISIBLE=TRUE
NAPIS1:FILENAME=NAPIS1.ANN
NAPIS1:TOCANVAS=TRUE
NAPIS1:PRIORITY=0
NAPIS1:FPS=16
NAPIS1:PRELOAD=TRUE
NAPIS1:RELEASE=TRUE
NAPIS1:MONITORCOLLISION=FALSE
NAPIS1:MONITORCOLLISIONALPHA=FALSE
NAPIS1:ONFINISHED^PLAY={THIS^HIDE();NAPIS2^HIDE();NAPIS3^PLAY("PLAY");}

OBJECT=NAPIS3
NAPIS3:TYPE=ANIMO
NAPIS3:VISIBLE=FALSE
NAPIS3:FILENAME=NAPIS3.ANN
NAPIS3:TOCANVAS=TRUE
NAPIS3:PRIORITY=0
NAPIS3:FPS=16
NAPIS3:PRELOAD=TRUE
NAPIS3:RELEASE=TRUE
NAPIS3:MONITORCOLLISION=FALSE
NAPIS3:MONITORCOLLISIONALPHA=FALSE
NAPIS3:ONFINISHED^PLAY={TIMPRESENTS^ENABLE();NAPIS1^HIDE();}

OBJECT=TYTUL1
TYTUL1:TYPE=ANIMO
TYTUL1:VISIBLE=FALSE
TYTUL1:FILENAME=TYTUL1.ANN
TYTUL1:TOCANVAS=TRUE
TYTUL1:PRIORITY=0
TYTUL1:FPS=8
TYTUL1:PRELOAD=TRUE
TYTUL1:RELEASE=TRUE
TYTUL1:MONITORCOLLISION=FALSE
TYTUL1:MONITORCOLLISIONALPHA=FALSE
TYTUL1:ONFINISHED={SKRZYNIA^PLAY("1");}

OBJECT=TYTUL2
TYTUL2:TYPE=ANIMO
TYTUL2:VISIBLE=FALSE
TYTUL2:FILENAME=TYTUL2.ANN
TYTUL2:TOCANVAS=TRUE
TYTUL2:PRIORITY=100
TYTUL2:FPS=8
TYTUL2:PRELOAD=TRUE
TYTUL2:RELEASE=TRUE
TYTUL2:MONITORCOLLISION=FALSE
TYTUL2:MONITORCOLLISIONALPHA=FALSE
TYTUL2:ONSTARTED={NOWE3^PLAY();}
TYTUL2:ONFINISHED={SKRZYNIA^PLAY("2");}

OBJECT=REKSIO
REKSIO:TYPE=ANIMO
REKSIO:VISIBLE=FALSE
REKSIO:FILENAME=REKSIO.ANN
REKSIO:TOCANVAS=TRUE
REKSIO:PRIORITY=0
REKSIO:FPS=16
REKSIO:PRELOAD=TRUE
REKSIO:RELEASE=TRUE
REKSIO:MONITORCOLLISION=FALSE
REKSIO:MONITORCOLLISIONALPHA=FALSE
REKSIO:ONFINISHED^1={THIS^PLAY("2");TYTUL1^PLAY("PLAY");}
REKSIO:ONFINISHED^2={THIS^HIDE();}

OBJECT=SKRZYNIA
SKRZYNIA:TYPE=ANIMO
SKRZYNIA:VISIBLE=FALSE
SKRZYNIA:FILENAME=SKRZYNIA.ANN
SKRZYNIA:TOCANVAS=TRUE
SKRZYNIA:PRIORITY=80
SKRZYNIA:FPS=10
SKRZYNIA:PRELOAD=TRUE
SKRZYNIA:RELEASE=TRUE
SKRZYNIA:MONITORCOLLISION=FALSE
SKRZYNIA:MONITORCOLLISIONALPHA=FALSE
SKRZYNIA:ONFINISHED^1={TYTUL2^PLAY("PLAY");}
SKRZYNIA:ONFINISHED^2={INTRO1S^PLAY();TIMSPACING^ENABLE();}


######################################
##############  TIMER  ###############
######################################

OBJECT=TIMPRESENTS
TIMPRESENTS:TYPE=TIMER
TIMPRESENTS:ELAPSE=2000
TIMPRESENTS:TICKS=0
TIMPRESENTS:ENABLED=FALSE
TIMPRESENTS:ONTICK={THIS^DISABLE();REKSIO^PLAY("1");NAPIS3^HIDE();}

OBJECT=TIMSPACING
TIMSPACING:TYPE=TIMER
TIMSPACING:ELAPSE=50
TIMSPACING:TICKS=0
TIMSPACING:ENABLED=FALSE
TIMSPACING:ONTICK={TYTUL1^MOVE(0,-5);TYTUL2^MOVE(0,5);SKRZYNIA^MOVE(0,5);}


######################################
##############  SOUND  ###############
######################################

OBJECT=INTRO1S
INTRO1S:TYPE=SOUND
INTRO1S:FILENAME=INTRO1.WAV
INTRO1S:PRELOAD=FALSE
INTRO1S:RELEASE=FALSE
INTRO1S:ONFINISHED={RATUNEK^GOTO("INTRO2");}

OBJECT=NOWE3
NOWE3:TYPE=SOUND
NOWE3:FILENAME=NOWE3.WAV


######################################
###############  MISC  ###############
######################################

OBJECT=MOUSE
MOUSE:TYPE=MOUSE
MOUSE:ONRELEASE={@IF("G_BFIRSTENTRY'TRUE","{RATUNEK^GOTO("NAWRAKU");}","{RATUNEK^GOTO("MENUGLOWNE");}");}


######################################
############  BEHAVIOUR  #############
######################################

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN(); !ANIMATIONS_INIT; NAPIS1^PLAY("PLAY");}

