######################################
##############  ANIMO  ###############
######################################

OBJECT=ZAGIEL
ZAGIEL:TYPE=ANIMO
ZAGIEL:FILENAME=ZAGIEL.ANN
ZAGIEL:TOCANVAS=TRUE
ZAGIEL:VISIBLE=TRUE
ZAGIEL:PRIORITY=0
ZAGIEL:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=WODA1
WODA1:TYPE=ANIMO
WODA1:FILENAME=WODA1.ANN
WODA1:TOCANVAS=TRUE
WODA1:VISIBLE=TRUE
WODA1:PRIORITY=2
WODA1:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=WODA2
WODA2:TYPE=ANIMO
WODA2:FILENAME=WODA2.ANN
WODA2:TOCANVAS=TRUE
WODA2:VISIBLE=TRUE
WODA2:PRIORITY=3
WODA2:ONFINISHED={THIS^PLAY("PLAY");}


######################################
##############  IMAGE  ###############
######################################

OBJECT=STATEK
STATEK:TYPE=IMAGE
STATEK:FILENAME=STATEK.IMG
STATEK:TOCANVAS=TRUE
STATEK:VISIBLE=TRUE
STATEK:PRIORITY=1
STATEK:ONINIT={THIS^MOVE(0,20);}

OBJECT=NAKLADKA
NAKLADKA:TYPE=IMAGE
NAKLADKA:FILENAME=NAKLADKA.IMG
NAKLADKA:TOCANVAS=TRUE
NAKLADKA:VISIBLE=TRUE
NAKLADKA:PRIORITY=10


######################################
#############  SEQUENCE  #############
######################################

OBJECT=PIRACISEQ
PIRACISEQ:TYPE=SEQUENCE
PIRACISEQ:FILENAME=PIRACICTSC.SEQ
PIRACISEQ:ONFINISHED^STATEK2A={SOUND5^PLAY();}


######################################
##############  TIMER  ###############
######################################

OBJECT=TIMFLOAT
TIMFLOAT:TYPE=TIMER
TIMFLOAT:ELAPSE=500
TIMFLOAT:ONTICK={WODA1^MOVE(0,4);WODA2^MOVE(0,1);STATEK^MOVE(0,-1);}


######################################
##############  SOUND  ###############
######################################

OBJECT=SOUND1
SOUND1:TYPE=SOUND
SOUND1:FILENAME=A_MAJTEK2.WAV
SOUND1:PRELOAD=FALSE
SOUND1:RELEASE=FALSE

OBJECT=SOUND2
SOUND2:TYPE=SOUND
SOUND2:FILENAME=A_SOKOLEOKO4.WAV
SOUND2:PRELOAD=FALSE
SOUND2:RELEASE=FALSE
SOUND2:ONFINISHED={SOUND1^PLAY();}

OBJECT=SOUND5
SOUND5:TYPE=SOUND
SOUND5:FILENAME=B_SOKOLEOKO1.WAV
SOUND5:PRELOAD=FALSE
SOUND5:RELEASE=FALSE
SOUND5:ONFINISHED={RATUNEK^GOTO("CUTSTATEK4");}


######################################
############  BEHAVIOUR  #############
######################################

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN(); !ANIMATIONS_INIT; ZAGIEL^PLAY("PLAY");WODA1^PLAY("PLAY");WODA2^PLAY("PLAY");PIRACISEQ^PLAY("STATEK2A"); !SOUNDS_INIT; SOUND2^PLAY();}

