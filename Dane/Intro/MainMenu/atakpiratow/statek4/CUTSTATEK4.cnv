######################################
##############  ANIMO  ###############
######################################

OBJECT=KURA
KURA:TYPE=ANIMO
KURA:FILENAME=KURA.ANN
KURA:TOCANVAS=TRUE
KURA:VISIBLE=TRUE
KURA:PRIORITY=0

OBJECT=ZAGIEL
ZAGIEL:TYPE=ANIMO
ZAGIEL:FILENAME=ZAGIEL.ANN
ZAGIEL:TOCANVAS=TRUE
ZAGIEL:VISIBLE=TRUE
ZAGIEL:PRIORITY=1
ZAGIEL:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=STATEK
STATEK:TYPE=ANIMO
STATEK:FILENAME=STATEK.ANN
STATEK:TOCANVAS=TRUE
STATEK:VISIBLE=TRUE
STATEK:PRIORITY=2
STATEK:ONFINISHED={THIS^PLAY("PLAY");}

OBJECT=WODA1
WODA1:TYPE=ANIMO
WODA1:FILENAME=WODA.ANN
WODA1:TOCANVAS=TRUE
WODA1:VISIBLE=TRUE
WODA1:PRIORITY=3
WODA1:ONFINISHED={THIS^PLAY("PLAY");}


######################################
##############  IMAGE  ###############
######################################

OBJECT=NAKLADKA1
NAKLADKA1:TYPE=IMAGE
NAKLADKA1:FILENAME=NAKLADKA.IMG
NAKLADKA1:TOCANVAS=TRUE
NAKLADKA1:VISIBLE=TRUE
NAKLADKA1:PRIORITY=10


######################################
##############  TIMER  ###############
######################################

OBJECT=TIMSAIL
TIMSAIL:TYPE=TIMER
TIMSAIL:ELAPSE=200
TIMSAIL:ONTICK={STATEK^MOVE(-4,0);ZAGIEL^MOVE(-4,0);}

OBJECT=TIMEND
TIMEND:TYPE=TIMER
TIMEND:ELAPSE=7500
TIMEND:ONTICK={RATUNEK^GOTO("CUTSTATEK5");}


######################################
##############  SOUND  ###############
######################################

OBJECT=SOUND1
SOUND1:TYPE=SOUND
SOUND1:FILENAME=B_MAJTEK1.WAV
SOUND1:PRELOAD=FALSE
SOUND1:RELEASE=FALSE
SOUND1:ONFINISHED={THIS^PLAY();}

OBJECT=SOUND2
SOUND2:TYPE=SOUND
SOUND2:FILENAME=B_BOSMAN1.WAV
SOUND2:PRELOAD=FALSE
SOUND2:RELEASE=FALSE

OBJECT=SOUND3
SOUND3:TYPE=SOUND
SOUND3:FILENAME=B_GRUBY1.WAV
SOUND3:PRELOAD=FALSE
SOUND3:RELEASE=FALSE

OBJECT=SOUND5
SOUND5:TYPE=SOUND
SOUND5:FILENAME=B_MAJTEK2.WAV
SOUND5:PRELOAD=FALSE
SOUND5:RELEASE=FALSE
SOUND5:ONFINISHED={SOUND1^PLAY();SOUND3^PLAY();}


######################################
############  BEHAVIOUR  #############
######################################

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN(); !ANIMATIONS_INIT; KURA^PLAY("PLAY");ZAGIEL^SETPOSITION(150,0);ZAGIEL^PLAY("PLAY");STATEK^SETPOSITION(150,0);STATEK^PLAY("PLAY");WODA1^PLAY("PLAY"); !SOUNDS_INIT; SOUND2^PLAY();SOUND5^PLAY();}

