######################################
##############  ANIMO  ###############
######################################

OBJECT=REKSIO
REKSIO:TYPE=ANIMO
REKSIO:VISIBLE=TRUE
REKSIO:FILENAME=REKSIO.ANN
REKSIO:TOCANVAS=TRUE
REKSIO:PRIORITY=0
REKSIO:FPS=16
REKSIO:PRELOAD=TRUE
REKSIO:RELEASE=TRUE
REKSIO:MONITORCOLLISION=FALSE
REKSIO:MONITORCOLLISIONALPHA=FALSE
REKSIO:ONFINISHED^3={RATUNEK^BACK();}


######################################
#############  SEQUENCE  #############
######################################

OBJECT=KRET
KRET:TYPE=SEQUENCE
KRET:FILENAME=KRET.SEQ
KRET:ONFINISHED^NUCI={THIS^PLAY("WRZESZCZY");REKSIO^PLAY("2");}
KRET:ONFINISHED^WRZESZCZY={THIS^PLAY("KRET_3");REKSIO^PLAY("3");}


######################################
##############  SOUND  ###############
######################################

OBJECT=SNDSPIEWKUR
SNDSPIEWKUR:TYPE=SOUND
SNDSPIEWKUR:FILENAME=KURASPIEW6.WAV
SNDSPIEWKUR:PRELOAD=FALSE
SNDSPIEWKUR:RELEASE=FALSE
SNDSPIEWKUR:ONFINISHED={THIS^PLAY();}


######################################
############  BEHAVIOUR  #############
######################################

OBJECT=__INIT__
__INIT__:TYPE=BEHAVIOUR
__INIT__:CODE={BEHINITSCENEMUSIC^RUN(); !ANIMATIONS_INIT; REKSIO^PLAY("1");KRET^PLAY("NUCI"); !SOUNDS_INIT; @IF("VARKROLEWNAETAPMUZYKA'1","{SNDSPIEWKUR^PLAY();}","");}

